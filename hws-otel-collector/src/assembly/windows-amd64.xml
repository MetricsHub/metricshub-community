<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
	<id>windows-amd64</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>${project.artifactId}</baseDirectory>
	<includeSiteDirectory>true</includeSiteDirectory>

	<dependencySets>
		<dependencySet>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<useProjectArtifact>false</useProjectArtifact>
			<unpack>true</unpack>
		</dependencySet>
	</dependencySets>

	<files>
		<file>
			<source>src/dist/windows/config/otel-config.yaml</source>
			<outputDirectory>config</outputDirectory>
			<lineEnding>windows</lineEnding>
			<filtered>true</filtered>
		</file>

		<file>
			<source>src/dist/windows/bin/hws-otel.cmd</source>
			<outputDirectory>bin</outputDirectory>
			<lineEnding>windows</lineEnding>
			<filtered>true</filtered>
		</file>

		<file>
			<source>${project.build.directory}/windows-amd64/${project.artifactId}.exe</source>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</file>
	</files>

</assembly>