				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<!-- buildnumber -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>buildnumber-maven-plugin</artifactId>
				<executions>

					<!-- initialize -->
					<!-- Create ${buildNumber} in the form of yyMMdd.HHmm -->
					<execution>
						<phase>initialize</phase>
						<goals>
							<goal>create</goal>
						</goals>
						<configuration>
							<doCheck>false</doCheck>
							<doUpdate>false</doUpdate>
							<getRevisionOnlyOnce>true</getRevisionOnlyOnce>
							<shortRevisionLength>8</shortRevisionLength>
							<items>
								<item>scmVersion</item>
							</items>
							<timestampFormat>{0,date,medium} at {0,time,full}</timestampFormat>
						</configuration>
					</execution>

				</executions>
			</plugin>

		</plugins>
