<?xml version="1.0" encoding="utf-8"?>

<Include xmlns="http://schemas.microsoft.com/wix/2006/wi"
         xmlns:util="http://schemas.microsoft.com/wix/UtilExtension">

  <ServiceInstall Type="ownProcess"
                  Start="auto"
                  Id="si_APPLICATION_LAUNCHER_ID"
                  Name="Hardware Sentry Agent"
                  Description="Hardware Sentry Agent monitors the health of hardware components in your datacenter."
                  ErrorControl="normal"
                  Account="LocalSystem"
                  Vital="yes"
  />
  <ServiceControl Start="install"
                  Stop="both"
                  Remove="uninstall"
                  Wait="yes"
                  Id="sc_APPLICATION_LAUNCHER_ID"
                  Name="Hardware Sentry Agent"
  />
</Include>