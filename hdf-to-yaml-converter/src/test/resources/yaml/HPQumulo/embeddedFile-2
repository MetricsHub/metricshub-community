BEGIN {FS = ": |,"}

/"id"/ {id = $2}
/"node_id"/ {nodeId = $2}
/"disk_model"/ {model = $2}
/"disk_serial_number"/ {serial = $2}
/"slot"/ {slot = "Drive Bay: " $2}
/"slot_type"/ {slotType = "Slot Type: " $2}
/"raw_capacity"/ {size = $2}
/"state"/ {
  status = $2;
  result = id ";" nodeId ";" model ";" serial ";" slot ";" slotType ";" size ";" status ";" status;
  gsub(/"/, "", result);
  print result
}
