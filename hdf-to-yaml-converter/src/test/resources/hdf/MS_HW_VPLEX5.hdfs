//
// Header
//
#include MS_HW_VPLEX.hhdf

hdf.DisplayName="EMC VPLEX Version 5"
hdf.TypicalPlatform="EMC VPLEX"
hdf.ReliesOn="EMC VPLEX REST API Version 5 and lower"
hdf.Version="1.0"
hdf.RemoteSupport="true"
hdf.RemoteSupport="True"
hdf.LocalSupport="false"
hdf.AppliesToOS="Storage"
hdf.NoAutoDetection="true"

// DETECTION
// Does a get_next to see if there that the Chassis OID is populated.
Detection.Criteria(1).Type="HTTP"
Detection.Criteria(1).Method="GET"
Detection.Criteria(1).URL="/vplex/engines"
Detection.Criteria(1).Header=EmbeddedFile(8)

