<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
	<id>packaging</id>
	<formats>
		<format>dir</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<files>

		<!-- Docker base image to create Debian build image -->
		<file>
			<source>src/main/resources/scripts/baseimage/debian/Dockerfile</source>
			<outputDirectory>/</outputDirectory>
			<destName>Dockerfile.debian</destName>
			<fileMode>0644</fileMode>
			<lineEnding>unix</lineEnding>
			<filtered>true</filtered>
		</file>

		<!-- Docker base image to create RHEL build image -->
		<file>
			<source>src/main/resources/scripts/baseimage/rhel/Dockerfile</source>
			<outputDirectory>/</outputDirectory>
			<destName>Dockerfile.rhel</destName>
			<fileMode>0644</fileMode>
			<lineEnding>unix</lineEnding>
			<filtered>true</filtered>
		</file>

		<!-- Docker build image to create Debian and RHEL packages -->
		<file>
			<source>src/main/resources/scripts/buildimage/Dockerfile</source>
			<outputDirectory>/</outputDirectory>
			<destName>Dockerfile.build</destName>
			<fileMode>0644</fileMode>
			<lineEnding>unix</lineEnding>
			<filtered>true</filtered>
		</file>

	</files>

</assembly>